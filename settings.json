{
	"files.autoSave": "onFocusChange",
	"json.schemas": [],
	//font
	"editor.fontLigatures": false,
	"editor.fontFamily": "JetBrains Mono",
	"chat.editor.fontWeight": "default",
	"editor.fontSize": 16,
	"editor.lineHeight": 1.7,
	//scss
	"liveSassCompile.settings.generateMap": false,
	"liveSassCompile.settings.showOutputWindowOn": "None",
	"liveSassCompile.settings.formats": [
		{
			"format": "expanded",
			"extensionName": ".css",
			"savePath": "styles/css/"
		},
		{
			"extensionName": ".min.css",
			"format": "compressed",
			"savePath": "styles/css/"
		}
	],
	"breadcrumbs.enabled": false,
	"editor.stickyScroll.maxLineCount": 1,
	"terminal.integrated.fontFamily": "JetBrains Mono",
	"workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",
	//Для корректной работы "Code Spell Checker" + "Russian - Code Spell Checker"
	"cSpell.language": "en,ru",
	//Для корректной работы "Prettier"
	"editor.formatOnPaste": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.useTabs": true,
	"prettier.semi": false,
	"prettier.jsxSingleQuote": true,
	"prettier.singleQuote": true,
	"prettier.arrowParens": "avoid",
	"workbench.colorTheme": "One Dark Pro Darker",
	//Отключаем не нужные Хлебные крошки -
	"breadcrumbs.icons": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showFiles": false,
	"breadcrumbs.symbolPath": "off",
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showConstructors": false,
	"breadcrumbs.showEnumMembers": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showEnums": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showInterfaces": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showModules": false,
	"breadcrumbs.showNamespaces": false,
	"breadcrumbs.showNull": false,
	"breadcrumbs.showNumbers": false,
	"breadcrumbs.showObjects": false,
	"breadcrumbs.showOperators": false,
	"breadcrumbs.showPackages": false,
	"breadcrumbs.showProperties": false,
	"breadcrumbs.showStrings": false,
	"breadcrumbs.showStructs": false,
	"breadcrumbs.showTypeParameters": false,
	"breadcrumbs.showVariables": false,
	// Отключаем Мини Карту кода
	"editor.minimap.renderCharacters": false,
	"editor.minimap.enabled": false,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"editor.tabSize": 2, // размер таба
	"editor.formatOnSave": true, // форматировать код при сохранении
	"explorer.compactFolders": false, // компактные папки
	"editor.smoothScrolling": true, // плавный скролл
	"workbench.list.smoothScrolling": true, // плавный скролл
	"terminal.integrated.smoothScrolling": true, // плавный скролл в терминале
	"editor.cursorBlinking": "expand", // мигающей курсор
	"terminal.integrated.cursorBlinking": true, // мигающей курсор
	"workbench.colorCustomizations": {
		"editorCursor.foreground": "#ffffff",
		"terminalCursor.foreground": "#ffffff"
	},
	"editor.glyphMargin": false,
	"editor.linkedEditing": true,
	"editor.padding.top": 15,
	"vscodeGoogleTranslate.preferredLanguage": "English",
	"cSpell.userWords": ["скролл", "скроллбара", "imask"],
	"editor.wordWrapColumn": 200,
	"emmet.optimizeStylesheetParsing": false,
	"editor.accessibilitySupport": "off",
	"indentRainbow.indicatorStyle": "light",
	"indentRainbow.lightIndicatorStyleLineWidth": 2,
	"indentRainbow.tabmixColor": "rgba(128,32,96,0.8)",
	"workbench.editorAssociations": {
		"*.svg": "default"
	},
	"bookmarks.saveBookmarksInProject": true,
	"chat.commandCenter.enabled": false,
	"Key Promoter.ignoredCommands": ["type", "workbench.action.Editor"],
	"prettier.printWidth": 200,
	"prettier.bracketSameLine": true,
	"workbench.editor.empty.hint": "hidden",
	"workbench.externalBrowser": "C:\\ProgramData\\Microsoft\\Windows\\Start Menu\\Programs\\Firefox Developer Edition.lnk",
	"emmet.extensionsPath": ["C:\\Users\\alexs\\AppData\\Roaming\\Code\\User\\snippets"]
	// "liveServer.settings.CustomBrowser": "firefox" // отступ сверху кода
}
